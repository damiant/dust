{
  "name": "dust",
  "version": "0.0.1",
  "author": "Damian Tarnawsky",
  "homepage": "https://dust.events",
  "type": "module",
  "scripts": {
    "start": "ng serve",
    "build": "ng build && bun scripts/copy-admin.ts",
    "build-prod": "NG_BUILD_OPTIMIZE_CHUNKS=1 ng build --configuration=production  && bun scripts/copy-admin.ts",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "copy-admin": "bun scripts/copy-admin.ts",
    "download": "npx tsx scripts/download.ts no 2017 2018 2019 2022 2023",
    "download-this-year": "npx tsx scripts/download.ts yes 2024",
    "deploy-preview-app": "npm run build --configuration=production && netlify deploy --prod --dir=www/browser",
    "rsl": "npx tsx scripts/rsl.ts",
    "restrooms": "npx tsx scripts/restrooms.ts",
    "precommit": "ng lint",
    "lint": "export NODE_OPTIONS='--max-old-space-size=8192' && ng lint",
    "prettify": "prettier \"**/*.{ts,html}\" --write",
    "prepare": "husky"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "20.0.2",
    "@angular/cdk": "20",
    "@angular/common": "^20.0.2",
    "@angular/compiler": "^20.0.2",
    "@angular/core": "^20.0.2",
    "@angular/forms": "^20.0.2",
    "@angular/platform-browser": "^20.0.2",
    "@angular/platform-browser-dynamic": "^20.0.2",
    "@angular/router": "^20.0.2",
    "@angular/service-worker": "^20.1.0",
    "@capacitor-community/in-app-review": "7.0.1",
    "@capacitor-community/keep-awake": "7.0.0",
    "@capacitor/android": "7.0.1",
    "@capacitor/app": "7.0.1",
    "@capacitor/app-launcher": "7.0.1",
    "@capacitor/browser": "7.0.1",
    "@capacitor/core": "7.0.1",
    "@capacitor/filesystem": "7.0.1",
    "@capacitor/geolocation": "^7.1.1",
    "@capacitor/haptics": "7.0.1",
    "@capacitor/ios": "7.0.1",
    "@capacitor/keyboard": "7.0.1",
    "@capacitor/local-notifications": "7.0.1",
    "@capacitor/network": "7.0.1",
    "@capacitor/preferences": "7.0.1",
    "@capacitor/push-notifications": "7.0.1",
    "@capacitor/screen-orientation": "7.0.1",
    "@capacitor/share": "7.0.1",
    "@capacitor/splash-screen": "7.0.1",
    "@capacitor/status-bar": "7.0.1",
    "@capacitor/text-zoom": "7.0.1",
    "@capawesome/capacitor-app-update": "7.0.1",
    "@ionic/angular": "8.6.2",
    "@webnativellc/capacitor-filesharer": "7.0.4",
    "@webnativellc/capacitor-navigation-bar": "^7.0.0",
    "@webnativellc/capacitor-print-webview": "7.0.1",
    "capacitor-plugin-safe-area": "4.0.0",
    "cordova-plugin-device-orientation": "3.0.0",
    "fuse.js": "7.0.0",
    "idb-keyval": "^6.2.1",
    "ionicons": "^7.4.0",
    "ngxtension": "5.0.0",
    "rxjs": "~7.8.2",
    "three": "0.175.0",
    "tslib": "^2.8.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "20.0.1",
    "@angular-eslint/builder": "20",
    "@angular-eslint/eslint-plugin": "20",
    "@angular-eslint/eslint-plugin-template": "20",
    "@angular-eslint/schematics": "20",
    "@angular-eslint/template-parser": "20",
    "@angular/cli": "20.0.1",
    "@angular/compiler-cli": "^20.0.2",
    "@angular/language-service": "^20.0.2",
    "@capacitor/cli": "7.0.1",
    "@ionic/angular-toolkit": "12.1.1",
    "@types/jasmine": "5.1.4",
    "@types/node": "22.13.10",
    "@types/three": "0.175.0",
    "@typescript-eslint/eslint-plugin": "8.26.1",
    "@typescript-eslint/parser": "8.26.1",
    "eslint": "9.22.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsdoc": "50.6.6",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-unused-imports": "4.1.4",
    "husky": "9.1.6",
    "lint-staged": "15.2.0",
    "native-run": "^2.0.1",
    "node-fetch": "^3.3.2",
    "prettier": "3.5.3",
    "sharp": "0.33.2",
    "tsx": "4.7.0",
    "typescript": "5.8.3"
  },
  "license": "MIT",
  "description": "An offline guide for the events, theme camps & art of Burning Man.",
  "browserslist": [
    "Chrome >=79",
    "ChromeAndroid >=79",
    "Firefox >=70",
    "Edge >=79",
    "Safari >=14",
    "iOS >=14"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "bunx lint-staged && bun run lint",
      "pre-push": "bun run lint"
    }
  },
  "lint-staged": {
    "*.{css,html,js,jsx,scss,ts,tsx}": [
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  }
}
